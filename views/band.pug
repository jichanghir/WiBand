extends components/layout

block variables
    - some = false;

block page-title
    | Штучний Інтелект Rock Band - #{title}

block page

    include components/topSection
    +topSection('band', 'Група')

    -
        var members = [
            {
                name: 'Олександр Сєркін',
                position: 'Guitar',
                img: 'https://scontent.fods2-1.fna.fbcdn.net/v/t1.0-9/37088820_472054183254873_8096498705739284480_n.jpg?_nc_cat=105&_nc_ht=scontent.fods2-1.fna&oh=2511529d1af2a92086694dba707dcefb&oe=5C68A1F6'
            },
            {
                name: 'Сергій Сєркін',
                position: 'Bass',
                img: 'https://instagram.fods2-1.fna.fbcdn.net/vp/f3cf15df55d4bb2ed7a0e113786adb03/5C9704A7/t51.2885-15/fr/e15/s1080x1080/31136679_476054209476288_7450310215947255808_n.jpg?_nc_ht=instagram.fods2-1.fna.fbcdn.net'
            },
            {
                name: 'Людмила Антохі',
                position: 'Vokal',
                img: 'https://instagram.fods2-1.fna.fbcdn.net/vp/bc08ec6c18eba375f3ebb2ed1c17b01e/5C983780/t51.2885-15/fr/e15/s1080x1080/35998655_363032994220844_2190939216567861248_n.jpg?_nc_ht=instagram.fods2-1.fna.fbcdn.net'
            },
            {
                name: 'Влад Короленко',
                position: 'Drums',
                img: 'https://instagram.fods2-1.fna.fbcdn.net/vp/accb53db734471454541883e113dfff1/5CA62590/t51.2885-15/fr/e15/s1080x1080/32450826_184872079007016_4899914947175120896_n.jpg'
            }
        ];


    .main
        section.band-section
            .members
                each member in members
                    .members__member
                        .members__photo(style=`background-image: url(${member.img})`)
                        .members__name= member.name
                        .members__position= member.position

            .band-section__description
                |  Группа Штучний Інтелект заснована братима Сєркіними влітку 2017 року. Олександр та Сергій Сєркіни вже записали 2 альбоми, але у складі англомовної группи SPIRITZ. Сумісно з Людмилою Антохі, яка вже зарекомендувала себе як учасниця українського X-Factor та проекту Voice of the SympoRock, вони починають роботу над першим україномовним альбомом. З часом к ним приєднується ударник Влад Короленко, який з Олександром і Людмилою вже грають у проекті Voice of the SympoRock.



